import "../styles/global.css";
const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
	method: "POST",
	headers: {
		"content-type": "application/json"
	},
	body: JSON.stringify({
		query: `
		query PageQuery {
			nodeByUri(uri: "/") {
				... on Page {
					id
					blocks
				}
			}
		}
		`
	})
});
const {data} = await response.json();
console.log(data.nodeByUri);
