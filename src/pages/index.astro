---
import "../styles/global.css";
import BlockRenderer from "../components/BlockRenderer.astro";
import type { Block } from "@wp-block-tools/styles";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
	method: "POST",
	headers: {
		"content-type": "application/json"
	},
	body: JSON.stringify({
		query: `
		query PageQuery {
      cssVariables
			nodeByUri(uri: "/") {
				... on Page {
					id
					blocks
				}
			}
		}
		`
	})
});
const {data} = await response.json();
const blocks = (data.nodeByUri?.blocks || []) as Block[];
---

<html lang="es" dir="ltr">
   
	<head>
    <!-- Meta-->
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no, minimum-scale=1">
		<meta name="description" content="Description of the page less than 150 characters">
		<meta name="keywords" content="">
		<meta name="author" content="">
		<meta name="robots" content="index, follow">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="generator" content={Astro.generator} />
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<title>Yoo</title>
    <style>
      :root {
        --css--variables--in-here: black;
      }
    </style>
    {!!data.cssVariables && <style set:html={`:root{${data.cssVariables}}`} />}
	</head>

	<body>
		<BlockRenderer blocks={blocks} />
	</body>

</html>
